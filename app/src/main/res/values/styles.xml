<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="android:colorAccent">@color/gray</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="backgroundTint">@color/design_default_color_primary_dark</item>
    </style>
    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#e91e63</item>
        <item name="colorPrimaryDark">#b0003a</item>
        <item name="colorAccent">@color/design_default_color_primary_dark</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">#b0003a</item>
        <item name="android:backgroundTint">#ff6090</item>
    </style>
    <style name="AppThemeDark" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray_dark</item>
        <item name="colorAccent">#b0003a</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">#b0003a</item>
        <item name="android:backgroundTint">@color/gray_dark</item>
    </style>
    <style name="CalcStyleMain" parent="AppTheme">
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/purple_200</item>
        <item name="fontFamily">@font/times</item>
    </style>
    <style name="CalcStyleButtons" parent="AppTheme">
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/gray_middle_dark</item>
        <item name="android:layout_marginStart">@dimen/margin_middle</item>
        <item name="android:layout_marginEnd">@dimen/margin_middle</item>
        <item name="android:layout_marginTop">@dimen/margin_middle</item>
        <item name="android:layout_marginBottom">@dimen/margin_middle</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/times</item>
    </style>
    <style name="CalcButtonC" parent="AppTheme">
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:layout_marginStart">@dimen/margin_middle</item>
        <item name="android:layout_marginEnd">@dimen/margin_middle</item>
        <item name="android:layout_marginTop">@dimen/margin_middle</item>
        <item name="android:layout_marginBottom">@dimen/margin_middle</item>
        <item name="android:textStyle">normal</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="fontFamily">@font/timesbd</item>
    </style>
    <style name="CalcButtonAction" parent="AppTheme">
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/margin_middle</item>
        <item name="android:layout_marginEnd">@dimen/margin_middle</item>
        <item name="android:layout_marginTop">@dimen/margin_middle</item>
        <item name="android:layout_marginBottom">@dimen/margin_middle</item>
        <item name="android:textStyle">normal</item>
        <item name="android:backgroundTint">@color/orange_light</item>
        <item name="fontFamily">@font/timesbd</item>
    </style>
    <style name="CalcText">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/gray_middle_dark</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="fontFamily">@font/timesbd</item>
    </style>
</resources>